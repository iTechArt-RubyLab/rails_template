<div id="users">
  <% @users.each do |user| %>
    <%= user.id %>
    <%= user.email %>
    <%= user.roles.pluck(:name).join(', ') %>

    <p>
      <%= link_to 'Show', user_path(user) %>
    </p>
    <p>
      <%= link_to 'Edit roles', edit_user_path(user) %>
    </p>

    <br>
    <br>
  <% end %>
</div>

<%= paginate @users %>
